{
  "dataset_reader": {
    "type": "goodreads_single_sentence"
  },
  "train_data_path": "tests/fixtures/goodreads.jsonl",
  "validation_data_path": "tests/fixtures/goodreads.jsonl",
  "model": {
    "type": "single_sentence_classifier",
    "text_field_embedder": {
      "token_embedders": {
        "tokens": {
          "type": "embedding",
          "embedding_dim": 2,
          "trainable": false
        }
      }
    },
    "sentence_encoder": {
      "type": "boe",
      "embedding_dim": 2,
      "averaged": true
    },
    "classifier_feedforward": {
      "input_dim": 2,
      "num_layers": 2,
      "hidden_dims": [1, 2],
      "activations": ["sigmoid", "linear"],
      "dropout": [0.2, 0.0]
    }
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["sentence", "num_tokens"]],
    "padding_noise": 0.0,
    "batch_size": 64
  },

  "trainer": {
    "num_epochs": 1,
    "cuda_device": -1,
    "grad_clipping": 5.0,
    "validation_metric": "+accuracy",
    "optimizer": {
      "type": "adagrad"
    }
  }
}
