{
  "dataset_reader": {
    "type": "goodreads_multiple_sentences"
  },
  "train_data_path": "tests/fixtures/goodreads.jsonl",
  "validation_data_path": "tests/fixtures/goodreads.jsonl",
  "test_data_path": "tests/fixtures/goodreads.jsonl",
  "evaluate_on_test": true,
  "model": {
    "type": "multiple_sentences_classifier",
    "class_weights": [0.05, 0.95],
    "text_field_embedder": {
      "token_embedders": {
        "tokens": {
          "type": "embedding",
          "embedding_dim": 2,
          "trainable": false
        }
      }
    },
    "sentence_encoder": {
      "type": "boe",
      "embedding_dim": 2,
      "averaged": true
    }
  },
  "iterator": {
    "type": "basic",
    "batch_size": 64
  },
  "trainer": {
    "num_epochs": 1,
    "cuda_device": -1,
    "grad_clipping": 5.0,
    "validation_metric": "+accuracy",
    "optimizer": {
      "type": "adagrad"
    }
  }
}
