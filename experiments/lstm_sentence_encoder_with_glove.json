{
  "dataset_reader": {
    "type": "goodreads_single_sentence"
  },
  "train_data_path": "https://goodreads-spoilers.s3.eu-central-1.amazonaws.com/goodreads-train.json",
  "validation_data_path": "https://goodreads-spoilers.s3.eu-central-1.amazonaws.com/goodreads-val.json",
  "test_data_path": "https://goodreads-spoilers.s3.eu-central-1.amazonaws.com/goodreads-test.json",
  "evaluate_on_test": true,
  "model": {
    "type": "single_sentence_classifier",
    "class_weights": [0.05, 0.95],
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "pretrained_file": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.6B.100d.txt.gz",
        "embedding_dim": 100,
        "trainable": false
      }
    },
    "sentence_encoder": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 100,
      "hidden_size": 100,
      "num_layers": 1,
      "dropout": 0.2
    },
    "classifier_feedforward": {
      "input_dim": 200,
      "num_layers": 2,
      "hidden_dims": [1, 2],
      "activations": ["sigmoid", "linear"],
      "dropout": [0.2, 0.0]
    }
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["sentence", "num_tokens"]],
    "padding_noise": 0.0,
    "batch_size": 64
  },

  "trainer": {
    "num_epochs": 40,
    "cuda_device": 0,
    "grad_clipping": 5.0,
    "validation_metric": "+accuracy",
    "optimizer": {
      "type": "adagrad"
    }
  }
}
